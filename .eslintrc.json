{
	"plugins": [
		"chai-friendly"
	],
	"extends": [
		"wikimedia/common",
		"wikimedia/language/es2019",
		"wikimedia/node",
		"plugin:chai-friendly/recommended"
	],
	"rules": {
		"comma-dangle": [ "error", "always-multiline" ],
		"no-unused-vars": [ "error", {
			"varsIgnorePattern": "^_"
		} ],
		"jsdoc/no-undefined-types": [ "error", {
			"definedTypes": [ "Session" ]
		} ]
	},
	"overrides": [
		{
			"files": "*.json",
			"rules": {
				"comma-dangle": "off"
			}
		}
	]
}
